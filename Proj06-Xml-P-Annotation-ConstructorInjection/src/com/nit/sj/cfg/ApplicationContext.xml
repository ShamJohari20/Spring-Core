<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context 
           http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Enable annotation-based Spring configuration -->
    <context:component-scan base-package="com.nit.sj.sbeans" />

    <!-- Explicit bean definition (optional, if not using annotations) -->
    <bean id="ldate" class="java.time.LocalDate" factory-method="now">
       
    </bean>

</beans>
